{
  "name": "hyper-app",
  "version": "1.0.578",
  "description": "",
  "main": "server.js",
  "scripts": {
    "dev": "clear && npx concurrently 'npm run tailwind-dev' 'node esbuild.watch.mjs' 'sleep 1 && NODE_NO_WARNINGS=1 tsx watch server.ts'",
    "tailwind-dev": "npx tailwindcss -i ./resources/js/index.css -o ./public/style.css -w -p",
    "tailwind-build": "npx tailwindcss -i ./resources/js/index.css -o ./public/style.css -m",
    "copy-public": "cp -r public build",
    "copy-views": "cp -r resources/views build/resources/views",
    "create-db-dir": "mkdir -p build/database",
    "build": "node clean && node sync_version && npm run tailwind-build && node esbuild.build.mjs && tsc && npm run copy-public && npm run copy-views && npm run create-db-dir && cp .env build/.env"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@inertiajs/svelte": "^1.0.6",
    "@symfony/webpack-encore": "^5.0.1",
    "axios": "^1.7.7",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^11.5.0",
    "chokidar": "^3.5.3",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dayjs": "^1.11.9",
    "dotenv": "^16.0.3",
    "express": "^4.21.2",
    "express-ws": "^5.0.2",
    "hyper-express": "^6.14.1",
    "knex": "^2.4.2",
    "live-directory": "^3.0.3",
    "serialport": "^13.0.0",
    "toastify-js": "^1.12.0",
    "uuid": "^11.0.2",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^20.1.3",
    "esbuild": "^0.19.0",
    "esbuild-svelte": "0.7.4",
    "esbuild-svelte-inertia": "^0.0.5",
    "file-loader": "^6.2.0",
    "postcss-loader": "^8.1.1",
    "svelte": "^4.2.12",
    "tailwindcss": "^3.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.4"
  }
